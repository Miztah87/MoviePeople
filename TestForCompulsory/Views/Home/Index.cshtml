@model IEnumerable<TestProxy.DomainModel.Movie>

@{
    ViewBag.Title = "Home Page";
}
<div class="pushmenu pushmenu-left">
    <div style="padding-top:40px;">
        <h3>Genre</h3>
        <!-- Small button group -->
        <div class="btn-group">
            <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Small button <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                ...
            </ul>
        </div>
    </div>

</div>


 <div class="container" style=" width:100%!important; padding:0!important; ">
            <div id="carousel-example-generic" class="carousel slide " data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner sliderCarousel" role="listbox">
                    <div class="item active">
                        <img src="~/Images/o-WATCHING-TV-facebook.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/o-WATCHING-TV-facebook (1).jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/watchingTv.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/watchingTv2.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>

                </div>
            </div>

        </div>
<div class="row" style="height:50px; width:auto;"></div>
<div style="position:fixed; top:60px; margin-left:-130px;" >
    <section class="buttonset ">
        <div id="nav_list"></div>
    </section>
</div>
@*Jquery that pushes the screen to right*@
<script type="text/javascript" >
    $(document).ready(function () {
        $menuLeft = $('.pushmenu-left');
        $nav_list = $('#nav_list');

        $nav_list.click(function () {
            $(this).toggleClass('active');
            $('.pushmenu-push').toggleClass('pushmenu-push-toright');
            $menuLeft.toggleClass('pushmenu-open');
        });
    });
</script>
<div class="col-md-12">
    <div class="row headLine">
        Recommended Movies
    </div>
    
        <div class="carousel slide" id="recomendedMovies">
            <div class="carousel-inner">
                <div class="item active">

                @foreach (var item2 in Model.AsEnumerable().Take(4))
                {
                    <ul class="thumbnails">
                        <li class="col-sm-3 ">
                            <div class="fff">
                                <div class="thumbnail">
                                    <a href="#"><img src="@item2.MovieCoverUrl" alt=""></a>
                                </div>
                                <div class="caption">
                                    <h4>@item2.Title</h4>
                                    <p>@item2.Description</p>
                                    <div class="row">
                                        <a class="btn btn-mini" href="#">» Read More</a>
                                    </div>                                    
                                    <input class="btn btn-success" type="button" value="Buy"> 
                                </div>
                            </div>
                        </li>
                    </ul>
                }
        
        </div><!-- /Slide1 -->
           
                <div class="item">
                     @foreach (var item in Model.Skip(4).Take(4))
                     {
                        <ul class="thumbnails">
                            <li class="col-sm-3 ">
                                <div class="fff">
                                    <div class="thumbnail" >
                                        <a href="#"><img src="@item.MovieCoverUrl" alt=""></a>
                                    </div>
                                    <div class="caption">
                                        <h4>@item.Title</h4>
                                        <p>@item.Description</p>
                                        <div class="row">
                                            <a class="btn btn-mini" href="#">» Read More</a>
                                        </div>
                                        <input class="btn btn-success" type="button" value="Buy"> 
                                    </div>
                                </div>
                            </li>
                        </ul>
                     }
                 </div><!-- /Slide2 -->

            <nav>
                <ul class="control-box pager">
                    <li><a data-slide="prev" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                    <li><a data-slide="next" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-right"></i></a></li>
                </ul>
            </nav>            <!-- /.control-box -->

        </div><!-- /#myCarousel -->
           
    </div>
   

    <div class="row headLine">
        Latest Movies
    </div>

    <div class="carousel slide" id="newestMovies">
        <div class="carousel-inner">
            <div class="item active">
            @foreach (var item in Model.OrderByDescending(a => a.Year).Take(4))
            {
                <ul class="thumbnails">
                    <li class="col-sm-3 movieSlideBorder">
                        <div class="fff">
                            <div class="thumbnail">
                                <a href="#"><img src="@item.MovieCoverUrl" alt=""></a>
                            </div>
                            <div class="caption">
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                                <a class="btn btn-mini" href="#">» Read More</a>
                            </div>
                        </div>
                    </li>
                    
                </ul>
            }
            </div><!-- /Slide1 -->
            <div class="item">
            @foreach (var item in Model.OrderByDescending(a => a.Year).Skip(4).Take(4))
            {
                <ul class="thumbnails">
                    <li class="col-sm-3 movieSlideBorder">
                        <div class="fff">
                            <div class="thumbnail">
                                <a href="#"><img src="@item.MovieCoverUrl" alt=""></a>
                            </div>
                            <div class="caption">
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                                <a class="btn btn-mini" href="#">» Read More</a>
                            </div>
                        </div>
                    </li>
                    
                </ul>
            }
            </div><!-- /Slide2 -->
      


            <nav>
                <ul class="control-box pager">
                    <li><a data-slide="prev" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-left"></i></a></li>
                    <li><a data-slide="next" href="#myCarousel" class=""><i class="glyphicon glyphicon-chevron-right"></i></li>
                </ul>
            </nav>
            <!-- /.control-box -->

        </div><!-- /#myCarousel -->
    </div>
    <script type="text/javascript">
        // Carousel Auto-Cycle
        $(document).ready(function () {
            $('#recomendedMovies').carousel({
                interval:5000
            })
        });
    </script>
    <script type="text/javascript">
        // Carousel Auto-Cycle
        $(document).ready(function () {
            $('#newestMovies').carousel({
                interval: 7000
            })
        });
    </script>
</div>


