}
<div class="pushmenu pushmenu-left">
    <div style="padding-top:20px;">
        <h3>Menu</h3>
        <a href="#">Home</a>
        <a href="#">Nav2</a>
        <a href="#">Nav3</a>
        <a href="#">Nav4</a>
        <a href="#">Nav5</a>
        <a href="#">Nav6</a>
        <a href="#">Nav7</a>
    </div>

</div>


 <div class="container" style="height:550px; width:100%!important; padding:0!important; ">
            <div id="carousel-example-generic" class="carousel slide " data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner carousel" role="listbox">
                    <div class="item active">
                        <img src="~/Images/o-WATCHING-TV-facebook.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/o-WATCHING-TV-facebook (1).jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/watchingTv.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/watchingTv2.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>

                </div>
            </div>
        </div>
<div style="position:absolute; top:60px; left:10px;" >
    <section class="buttonset">
        <div id="nav_list"></div>
    </section>
</div>
@*Jquery that pushes the screen to right*@
<script type="text/javascript" >
    $(document).ready(function () {
        $menuLeft = $('.pushmenu-left');
        $nav_list = $('#nav_list');

        $nav_list.click(function () {
            $(this).toggleClass('active');
            $('.pushmenu-push').toggleClass('pushmenu-push-toright');
            $menuLeft.toggleClass('pushmenu-open');
        });
    });
</script>

@foreach (var item in Model)
{

    <tr>

        <td>
            <img src="@item.MovieCoverUrl" width="200" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>

}

